<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="12dp">
        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/music"
            android:layout_margin="12dp"
            android:id="@+id/song_artwork_img"
            android:contentDescription="@string/artwork" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/song_txt"
            tools:text="@string/song_name"
            android:textSize="24sp"
            android:layout_margin="12dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/artist_txt"
            tools:text="@string/artist"
            android:textSize="24sp"
            android:layout_margin="12dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="12dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/default_time"
                android:textSize="24sp"
                android:id="@+id/current_time_txt"/>
            <SeekBar
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="-:--"
                android:textSize="24sp"
                android:id="@+id/duration_txt"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_height="64dp"
                android:scaleType="centerCrop"
                android:layout_margin="12dp"
                android:layout_width="64dp"
                android:src="@drawable/ic_baseline_skip_next_24"
                android:id="@+id/prev_btn"
                android:contentDescription="prev"
                android:rotation="180"/>
            <ImageView
                android:layout_height="64dp"
                android:scaleType="centerCrop"
                android:layout_margin="12dp"
                android:layout_width="64dp"
                android:src="@drawable/ic_baseline_play_arrow_24"
                android:id="@+id/play_btn"
                android:contentDescription="play"/>
            <ImageView
                android:layout_height="64dp"
                android:scaleType="centerCrop"
                android:layout_margin="12dp"
                android:layout_width="64dp"
                android:src="@drawable/ic_baseline_skip_next_24"
                android:id="@+id/next_btn"
                android:contentDescription="next"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>